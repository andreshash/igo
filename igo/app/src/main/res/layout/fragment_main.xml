<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abc_search_url_text_pressed"
    tools:context=".Activities.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="440dp"
        android:layout_height="20dp"
        android:text="@string/m5" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Activities.MainActivity"
        android:background="@drawable/l15"
        android:layout_gravity="right|center_vertical"
        android:visibility="visible"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B i e n v e n i d o"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:textColor="#dcc20e0e"
            android:textColorHighlight="#390505"
            android:textSize="40dp"
            android:height="60dp"
            android:layout_weight="1"
            android:textColorLink="#080808"
            android:linksClickable="false"
            android:longClickable="false"
            android:textIsSelectable="false"
            android:theme="@style/AppTheme"
            android:singleLine="false" />


    </LinearLayout>

    <Button
        android:id="@+id/consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomendados"
        android:ellipsize="middle"
        android:clickable="false"
        android:visibility="visible"
        android:layout_gravity="left|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todas"
        android:id="@+id/All_images"
        android:layout_gravity="right|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="191dp"
        android:text="El turismo natural lo tiene todo. Visita nuestros sitios recomendados y atrÃ©vete a disfrutar de muchas aventuras al aire libre."
        android:id="@+id/textView2"
        android:layout_gravity="left|bottom"
        android:textColor="#dcdad6d6"
        android:textColorHighlight="#390505"
        android:textSize="25dp"
        android:height="60dp"
        android:layout_weight="1"
        android:textColorLink="#080808"
        android:linksClickable="false"
        android:longClickable="false"
        android:textIsSelectable="false"
        android:theme="@style/AppTheme"
        android:singleLine="false" />


</FrameLayout>



